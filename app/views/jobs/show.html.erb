<div class="content">
<table>
    <tr>
      <th>Title</th>
      <th>Organization</th>
      <th>City</th>
      <th>Salary</th>
    </tr>

    <tr>
      <td><%= @job.title %></td>
      <td><%= @job.organization %></td>
      <td><%= @job.city %></td>
      <td><%= @job.salary %></td>
      <td><%= @job.applied_date %></td>
    </tr>

    <tr>
      <th>Date Posted</th>
      <th>Application Deadline</th>
      <th>Date Applied</th>
      <th>Other Deadline</th>
    </tr>

    <tr>
      <td><%= @job.date_posted %></td>
      <td><%= @job.application_deadline %></td>
      <td><%= @job.applied_date %></td>
      <td><%= @job.other_deadline %></td>
    </tr>

    <tr>
      <th>Interview Date</th>
      <th>Offer Date</th>
    <tr>

    <tr>
      <td><%= @job.interview_date %></td>
      <td><%= @job.offer_date %></td>
    </tr>

    <tr>
      <th colspan="5">Description</th>
    </tr>

    <tr>
      <td colspan="5" style="height:150px"><%= @job.description %></td>
    </tr>
</table>

<button class="button"><%= link_to "Edit", edit_job_path(@job) %></button>
<button class="button"><%= link_to "Delete", job_path(@job.id), method: "DELETE" %></button>
