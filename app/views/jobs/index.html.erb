
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Organization</th>
      <th>Location</th>
      <th>Salary</th>
      <th>Date Posted</th>
      <th>Application Deadline</th>
      <th>Applied?</th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.organization %></td>
        <td><%= job.location %></td>
        <td><%= job.salary %></td>
        <td><%= job.date_posted %></td>
        <td><%= job.application_deadline %></td>
        <td><%= job.applied %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Job', 'jobs/new' %>
